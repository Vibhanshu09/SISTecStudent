<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#8E24AA" />
            <gradient android:angle="-90" android:endColor="#6A1B9A" android:startColor="#4A148C" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#8E24AA" />

            <solid android:color="#4A148C" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#8E24AA" />
            <gradient android:angle="-90" android:endColor="#4A148C" android:startColor="#6A1B9A" />
        </shape>
    </item>
</selector>