<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startBackground"
    tools:context=".ChangePassword" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/old_pass"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_field"
                android:drawableStart="@drawable/ic_password_black_24dp"
                android:drawablePadding="5dp"
                android:hint="@string/old_pass"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="1dp"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/new_pass"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_field"
                android:drawableStart="@drawable/ic_password_black_24dp"
                android:drawablePadding="5dp"
                android:hint="@string/new_pass"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="1dp"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/con_pass"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_field"
                android:drawableStart="@drawable/ic_password_black_24dp"
                android:drawablePadding="5dp"
                android:hint="@string/con_pass"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="1dp"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/change_pass_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_disabled"
            android:text="@string/change_pass"
            android:textColor="@android:color/white" />

    </LinearLayout>




    </ScrollView>